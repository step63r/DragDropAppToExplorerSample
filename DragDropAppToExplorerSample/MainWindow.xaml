<Window x:Class="DragDropAppToExplorerSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragDropAppToExplorerSample"
        mc:Ignorable="d"
        AllowDrop="True"
        Drop="Window_Drop"
        PreviewDragOver="Window_PreviewDragOver"
        Title="DragDropAppToExplorerSample" Height="450" Width="800">
    <Window.DataContext>
        <local:MyFileList />
    </Window.DataContext>
    <Grid>
        <ListBox x:Name="lbSample" ItemsSource="{Binding FileNames}"/>
    </Grid>
</Window>
